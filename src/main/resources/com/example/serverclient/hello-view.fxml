<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.serverclient.MainController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Файл">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#addBookAction" text="Добавить" />
                  <MenuItem mnemonicParsing="false" onAction="#deleteBookAction" text="Удалить" />
                  <MenuItem mnemonicParsing="false" onAction="#closeAction" text="Закрыть" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Авторы">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#addOrChangeAuthorAction" text="Добавить/Изменить" />
                  <MenuItem mnemonicParsing="false" onAction="#deleteAuthorAction" text="Удалить" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Издательство">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#addOrChangePublisherAction" text="Добавить/Изменить" />
                  <MenuItem mnemonicParsing="false" onAction="#deletePublisherAction" text="Удалить" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Города">
              <items>
                  <MenuItem mnemonicParsing="false" onAction="#addOrChangeCityAction" text="Добавить/Изменить" />
                  <MenuItem mnemonicParsing="false" onAction="#deleteCityAction" text="Удалить" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Жанры">
              <items>
                  <MenuItem mnemonicParsing="false" onAction="#addOrChangeGenreAction" text="Добавить/Изменить" />
                  <MenuItem mnemonicParsing="false" onAction="#deleteGenreAction" text="Удалить" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <TableView fx:id="bookTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="columnNumber" prefWidth="34.0" text="№" />
          <TableColumn fx:id="columnTitle" prefWidth="154.0" text="Название" />
            <TableColumn fx:id="ColumnAuthor" prefWidth="145.0" text="Автор" />
            <TableColumn fx:id="columnGenre" prefWidth="105.0" text="Жанр" />
            <TableColumn fx:id="columnPublisher" prefWidth="161.0" text="Издательство" />
        </columns>
      </TableView>
   </center>
   <bottom>
      <HBox prefHeight="28.0" prefWidth="672.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#addBookAction" text="Добавить" />
            <Button mnemonicParsing="false" onAction="#changeBookAction" text="Изменить" />
            <Button mnemonicParsing="false" onAction="#deleteBookAction" text="Удалить" textAlignment="CENTER" />
         </children>
      </HBox>
   </bottom>
